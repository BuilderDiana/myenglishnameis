è¦†ç›–ï¼š
app/api/generate/route.ts

import { NextResponse } from "next/server";
import { GenerateRequestSchema, GenerateResponseSchema } from "@/app/lib/contracts";

export async function POST(req: Request) {
  try {
    const raw = await req.json();
    const input = GenerateRequestSchema.parse(raw);

    // TODO: ä¸‹ä¸€æ­¥æ¥ AIï¼ˆç°åœ¨å…ˆè¿”å›å‡æ•°æ®ï¼Œä½†ä¼šç”¨ input å‚ä¸ç”Ÿæˆé€»è¾‘ï¼‰
    const result = {
      ok: true as const,
      candidates: [
        {
          name: "Elowen",
          pronunciation_ipa: "É›ËˆloÊŠ.É™n",
          nickname: ["Ellie", "Wen"],
          origin: "Cornish",
          vibe_tags: ["rare", "cute", "warm", input.scene],
          why_fit: ["ç‹¬ç‰¹ä½†ä¸æ€ª", "å‘éŸ³æŸ”å’Œï¼Œäº²å’ŒåŠ›å¼º"],
        },
        {
          name: "Juniper",
          pronunciation_ipa: "ËˆdÊ’uË.nÉª.pÉ™r",
          nickname: ["Juni"],
          origin: "English (nature name)",
          vibe_tags: ["rare", "playful", "fresh", input.scene],
          why_fit: ["å¯çˆ±åˆæœ‰è®°å¿†ç‚¹", "åå°ä¼—ä½†å®¹æ˜“è¢«æ¥å—"],
        },
      ],
    };

    // è¾“å‡ºä¹Ÿåšæ ¡éªŒï¼šä¿è¯å‰ç«¯æ°¸è¿œæ‹¿åˆ°ç¨³å®šç»“æ„ï¼ˆproduction å¿…å¤‡ï¼‰
    const safe = GenerateResponseSchema.parse(result);
    return NextResponse.json(safe);
  } catch (err: any) {
    return NextResponse.json(
      {
        ok: false,
        error: "Bad Request",
        message: err?.message ?? "Invalid input",
      },
      { status: 400 }
    );
  }
}
